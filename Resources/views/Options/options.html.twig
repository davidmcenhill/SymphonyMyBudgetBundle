{# src/Btg/MyBudgetBundle/Resources/views/Options/options.html.twig #}
{% extends 'BtgMyBudgetBundle::layout.html.twig' %}
{% form_theme form 'BtgMyBudgetBundle:Form:fields.html.twig' %}


{% block work_area %} {# this will be inserted into block work area in the the layout template. #}
<div>
   <p>{{ debug_msg }}</p>
   <h2>Edit Processing Options</h2>
   <form id="optionsFormLayout" action="{{ path('BtgMyBudgetBundle_options') }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
        {{ form_errors(form) }}
         {{ form_rest(form) }}
        <div class="button1"><input type="submit" name="Save" value="Save" /></div>
        <div class="button2"><input type="submit" name="Defaults" value="Defaults" /></div>
   </form>
</div>
{% endblock %}
