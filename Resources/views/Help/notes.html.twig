{# src/Btg/MyBudgetBundle/Resources/views/Help/notes.html.twig #}
{% extends 'BtgMyBudgetBundle::layout.html.twig' %}
{% form_theme form 'BtgMyBudgetBundle:Form:fields.html.twig' %}

{% block work_area %} {# this will be inserted into block work area in the the layout template. #}
<div>
   <p>{% autoescape false %}{{ result_note }}{% endautoescape %}</p>
   <form id="reportNumericFormLayout" action="{{ path('BtgMyBudgetBundle_help_notes') }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
        {{ form_errors(form) }}
        {{ form_row(form.note, { 'label' : 'Note', 'attr' : { 'class' : 'note' }}) }}
        {{ form_rest(form) }}
         <div class="button1"><input type="submit" name="Update" value="Update" /></div>
   </form>
</div>
{% endblock %}
